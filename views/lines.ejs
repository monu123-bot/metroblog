      <div style="width:300px ;margin-left:auto;margin-right:auto;text-align: center;">
        <% for (const item in station) { %>
          <%  if(station[item].line[0] == color) {  %>

              <div class="single_station d-flex bd-highlight">
                <div class="left_lines p-2 flex-fill bd-highlight">
                <% if(station[item].line.length == 2 ){ %>
                     <div style="height:90%;width: 100%; background-color: <%- station[item].line[1] %>;"></div>

               <% } %>
               <% if(station[item].line.length == 3 ){ %>
                <div style="height:40%;width: 100%;margin-bottom: 5%; background-color: <%- station[item].line[1] %>;"></div>
                <div style="height:40%;width: 100%; background-color: <%- station[item].line[2] %>"></div>

          <% } %>
                </div>
                <div style="background-color:<%- color %> ;" class="station_name p-2 flex-fill bd-highlight">
                
                  <% if(color == 'blue' || color == 'green' || color == 'red'){ %> 
                    <b style="color:white ;">  <%-  station[item].name %> </b>
                <%  }
                else{ %>
                  <b>  <%-  station[item].name %> </b>
               <% } %>
                  
                
                </div>
                <div class="right_lines p-2 flex-fill bd-highlight">
                  <% if(station[item].line.length == 2 ){ %>
                    <div style="height:90%;width: 100%; background-color: <%- station[item].line[1] %>;"></div>

              <% } %>
              <% if(station[item].line.length == 3 ){ %>
               <div style="height:40%;width: 100%;margin-bottom: 5%; background-color: <%- station[item].line[1] %>;"></div>
               <div style="height:40%;width: 100%; background-color: <%- station[item].line[2] %>"></div>

         <% } %>
                </div>
              </div>
              <div style="width:20px ;margin-left:auto;margin-right:auto; height:30px;background-color:<%- color %>"></div>



<%
 } } %>
      </div>
      
